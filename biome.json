{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": false,
        "style": {
          "useImportType": "off"
        }
      }
    },
    "files": {
      "ignore": ["build/**"]
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "ignore": [],
      "attributePosition": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf"
    },
    "javascript": {
      "formatter": {
        "arrowParentheses": "always",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "jsxQuoteStyle": "double",
        "quoteProperties": "asNeeded",
        "semicolons": "asNeeded",
        "trailingCommas": "all",
        "quoteStyle": "single"
      },
      "parser": {
        "unsafeParameterDecoratorsEnabled": true
      }
    },
    "json": {
      "formatter": {
        "trailingCommas": "none"
      }
    }
  }